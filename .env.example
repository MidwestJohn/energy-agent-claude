# =============================================================================
# Energy Grid Management Agent - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# =============================================================================
# CLAUDE API CONFIGURATION
# =============================================================================
# Your Claude API key from Anthropic (https://console.anthropic.com/)
CLAUDE_API_KEY=your_claude_api_key_here

# Claude model to use for analysis
# Options: claude-3-sonnet-20240229, claude-3-haiku-20240307, claude-3-opus-20240229
CLAUDE_MODEL=claude-3-sonnet-20240229

# Maximum tokens for Claude responses (1-100000)
CLAUDE_MAX_TOKENS=4000

# Temperature for Claude responses (0.0-1.0, higher = more creative)
CLAUDE_TEMPERATURE=0.7

# =============================================================================
# NEO4J DATABASE CONFIGURATION
# =============================================================================
# Neo4j database URI (supports neo4j://, neo4j+s://, bolt://, bolt+s://)
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io

# Neo4j username
NEO4J_USERNAME=neo4j

# Neo4j password
NEO4J_PASSWORD=your_neo4j_password_here

# Neo4j database name (default: neo4j)
NEO4J_DATABASE=neo4j

# Maximum connection pool size for Neo4j
NEO4J_MAX_CONNECTION_POOL_SIZE=50

# Connection timeout in seconds
NEO4J_CONNECTION_TIMEOUT=30

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
# Application title
STREAMLIT_TITLE=Energy Grid Management Agent

# Page icon (emoji or URL)
STREAMLIT_PAGE_ICON=âš¡

# Layout mode (centered, wide)
STREAMLIT_LAYOUT=wide

# Initial sidebar state (auto, expanded, collapsed)
STREAMLIT_SIDEBAR_STATE=expanded

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
APP_ENV=development

# Enable debug mode (True/False)
DEBUG=False

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Data cache TTL in seconds (5 minutes)
DATA_CACHE_TTL=300

# Maximum number of query results to return
MAX_QUERY_RESULTS=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable authentication (True/False)
ENABLE_AUTH=False

# Session timeout in seconds (1 hour)
SESSION_TIMEOUT=3600

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Enable metrics collection (True/False)
ENABLE_METRICS=True

# Metrics server port
METRICS_PORT=8000

# =============================================================================
# OPTIONAL: ADVANCED CONFIGURATION
# =============================================================================
# Custom Neo4j connection parameters (JSON format)
# NEO4J_EXTRA_PARAMS={"encrypted": true, "trust": "TRUST_SYSTEM_CA_SIGNED_CERTIFICATES"}

# Custom Claude API parameters (JSON format)
# CLAUDE_EXTRA_PARAMS={"top_p": 0.9, "top_k": 40}

# Application secret key for session management
# APP_SECRET_KEY=your_secret_key_here

# Database connection retry attempts
# DB_RETRY_ATTEMPTS=3

# Database connection retry delay in seconds
# DB_RETRY_DELAY=5 